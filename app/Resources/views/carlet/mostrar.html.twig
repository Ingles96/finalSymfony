{% extends 'base.html.twig' %}

{% block body %}
    <h1>Jugador</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ carlet.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ carlet.nombre }}</td>
            </tr>
            <tr>
                <th>Apellidos</th>
                <td>{{ carlet.apellidos }}</td>
            </tr>
            <tr>
                <th>Fechanacimiento</th>
                <td>{% if carlet.fechaNacimiento %}{{ carlet.fechaNacimiento|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Categoria</th>
                <td>{{ carlet.categoria }}</td>
            </tr>
            <tr>
                <th>Altura</th>
                <td>{{ carlet.altura }}</td>
            </tr>
            <tr>
                <th>Peso</th>
                <td>{{ carlet.peso }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('carlet_index') }}">Volver a la lista</a>
        </li>
        <li>
            <a href="{{ path('editar_jugador', { 'id': carlet.id }) }}">Editar</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Borrar">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
